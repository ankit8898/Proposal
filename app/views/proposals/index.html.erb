

<div id="proposals">
  <%= render @proposals %>
</div>

<%= simple_form_for @proposal, :remote => true,:html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Proposal</legend>
    <%= f.error_notification %>
<%= f.input :proposal_name %>
<%= f.input :description %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', proposals_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
