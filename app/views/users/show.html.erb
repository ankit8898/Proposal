<div class="form-actions">
<h1>Welcome: <%=@user.name%></h1> 
<p>
  <b>Company</b>
  <%= @user.company.name %>
</p>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Proposal Name</th>
      <th>Description</th>
    </tr>
    <% @proposals.each do |proposal| %>
      <tr>
        <td><%= proposal.proposal_name%></td>
        <td><%= proposal.description %></td>
      </tr>
    <% end %>
  </thead>
  <tbody>
    
  </tbody>
</table>

<%= simple_form_for @proposal, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>New Proposal</legend>
    <%= f.error_notification %>
<%= f.input :proposal_name %>
<%= f.input :description ,:hint => "What Kind of Proposal is it?" %>

<%= hidden_field_tag 'user_id', @user.id%>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', proposals_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>


